        "/api/v1/campaigns": {
            "get": {
                "tags": [
                    "Campaigns"
                ],
                "summary": "List campaigns",
                "description": "Lists campaigns. Donors see only 'active' campaigns. Committee members see campaigns from their institution. Admins see all.",
                "operationId": "617d936d65b29bf3912371d823eceba3",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "institution_id",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Campaign list"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Campaigns"
                ],
                "summary": "Create a campaign request",
                "description": "Creates a new campaign. Status starts as 'pending_review' and requires committee approval to become 'active'.",
                "operationId": "c9e6f9a10cb181d5df074904ff19a753",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "goal_amount",
                                    "campaign_type",
                                    "institution_id"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Medical Assistance for Juan"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "goal_amount": {
                                        "type": "number",
                                        "example": 100000
                                    },
                                    "campaign_type": {
                                        "type": "string",
                                        "enum": [
                                            "general",
                                            "individual"
                                        ]
                                    },
                                    "institution_id": {
                                        "description": "Required. Institution this campaign belongs to.",
                                        "type": "integer"
                                    },
                                    "bank_account_id": {
                                        "description": "Bank account for this campaign",
                                        "type": "integer",
                                        "nullable": true
                                    },
                                    "beneficiary_id": {
                                        "description": "For individual campaigns",
                                        "type": "integer",
                                        "nullable": true
                                    },
                                    "priority": {
                                        "type": "string",
                                        "enum": [
                                            "normal",
                                            "urgent"
                                        ]
                                    },
                                    "end_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Campaign created successfully and pending review"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
