        "/api/v1/campaigns/{campaign}/approve": {
            "post": {
                "tags": [
                    "Campaign Approval"
                ],
                "summary": "Approve campaign",
                "description": "Committee member approves campaign",
                "operationId": "19be330eccd3ded1517b0cc27391ce93",
                "parameters": [
                    {
                        "name": "campaign",
                        "in": "path",
                        "required": true,
